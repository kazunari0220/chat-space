-# ＜チャット画面＞
.main-chat
  .main-chat__group-info
    .main-chat__group-info__group 
      .main-chat__group-info__group__group-name
        = @group.name
      .main-chat__group-info__group__member-list 
        .main-chat__group-info__group__member-list__member
          Member:
        .main-chat__group-info__group__member-list__name
          - @group.users.each do |user|
            = user.name
    = link_to edit_group_path(@group), class: "group-info__edit-button__btn" do
      .main-chat__group-info__edit-button
        Edit
        
  .main-chat__message-field
    = render @messages

  .main-chat__footer
    = form_with model: [@group, @message], local: true do |f|
      .new-message
        .input-box
          = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
          = f.label :image, class: 'input-box__image' do
            = icon('far', 'image', class: 'input-box__icon')
            = f.file_field :image, class: 'input-box__file'
        = f.submit 'Send', class: 'submit-btn'


